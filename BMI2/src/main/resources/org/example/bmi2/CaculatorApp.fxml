<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.bmi2.CalculatorAppController">
    <TextField fx:id="heightField" promptText="Chiều cao (m)" />
    <TextField fx:id="weightField" promptText="Cân nặng (kg)" />
    <Button fx:id="bmiButton" text="Tính BMI" onAction="#calculateBMI" />

    <TextField fx:id="byteField" promptText="Số byte" />
    <Button fx:id="byteToBitButton" text="Đổi Byte -> bit" onAction="#convertByteToBit" />

    <TextArea fx:id="historyArea" prefHeight="200" editable="false" />
</VBox>
