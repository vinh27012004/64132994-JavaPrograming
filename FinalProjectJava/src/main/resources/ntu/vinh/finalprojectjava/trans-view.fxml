<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="ntu.vinh.finalprojectjava.controller.TransactionController">
    <Label text="Quản lý Giao Dịch" styleClass="label" layoutX="20" layoutY="20"/>
    <TableView fx:id="transactionTable" layoutX="20" layoutY="60" prefWidth="760" prefHeight="400">
        <columns>
            <TableColumn text="ID" fx:id="idColumn" prefWidth="100"/>
            <TableColumn text="Danh mục" fx:id="categoryColumn" prefWidth="150"/>
            <TableColumn text="Số tiền" fx:id="amountColumn" prefWidth="150"/>
            <TableColumn text="Ngày" fx:id="dateColumn" prefWidth="150"/>
            <TableColumn text="Mô tả" fx:id="descriptionColumn" prefWidth="200"/>
        </columns>
    </TableView>
    <Button text="Thêm Giao Dịch" layoutX="660" layoutY="480" onAction="#handleAddTransaction" styleClass="button"/>
</AnchorPane>

