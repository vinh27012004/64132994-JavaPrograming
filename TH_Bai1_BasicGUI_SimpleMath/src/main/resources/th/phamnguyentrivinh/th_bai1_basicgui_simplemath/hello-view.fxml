<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" spacing="10" alignment="CENTER" fx:controller="th.phamnguyentrivinh.th_bai1_basicgui_simplemath.CalculatorController">
    <padding>
        <Insets top="15" right="15" bottom="15" left="15" />
    </padding>

    <!-- Input fields -->
    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="txtNumberA" promptText="Enter number A" />
        <TextField fx:id="txtNumberB" promptText="Enter number B" />
    </HBox>

    <!-- Operation selection -->
    <HBox spacing="10" alignment="CENTER">
        <RadioButton fx:id="rbAdd" text="+" />
        <RadioButton fx:id="rbSubtract" text="-" />
        <RadioButton fx:id="rbMultiply" text="*" />
        <RadioButton fx:id="rbDivide" text="/" />
    </HBox>


    <!-- Action button -->
    <Button text="Calculate" onAction="#handleCalculate" />

    <!-- Result display -->
    <Label fx:id="lblResult" text="Result: " />
</VBox>
