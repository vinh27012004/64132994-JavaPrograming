<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" spacing="10" alignment="CENTER" fx:controller="th.phamnguyentrivinh.th_bai2_basicgui_bmi.BMIController">
    <padding>
        <Insets top="15" right="15" bottom="15" left="15" />
    </padding>

    <!-- Input fields -->
    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="txtHeight" promptText="Enter height (cm)" />
        <TextField fx:id="txtWeight" promptText="Enter weight (kg)" />
    </HBox>

    <!-- Checkbox for Asian selection -->
    <CheckBox fx:id="chkAsian" text="Người Châu Á" />

    <!-- Action button -->
    <Button text="Tính BMI" onAction="#handleCalculateBMI" />

    <!-- Result display -->
    <Label fx:id="lblResult" text="BMI: " />
    <Label fx:id="lblEvaluation" text="Chỉ số: " />
</VBox>

